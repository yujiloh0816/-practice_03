<h1>Books</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>User</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to (attachment_image_tag book.user, :profile_image, :fill, 300, 300), user_path(book.user) %></td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>
